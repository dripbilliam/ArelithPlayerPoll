{
  "name": "arelith-playerchecker",
  "version": "1.0.0",
  "description": "Arelith player checker (portable)",
  "main": "main.js",
  "author": "MysteryMan",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder -w"
  },
  "devDependencies": {
    "electron": "^31.0.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.TheLedger.arelithplayerchecker",
    "productName": "Arelith Player Checker",
    "files": [
      "main.js",
      "preload.js",
      "index.html",
      "assets/**",
      "package.json"
    ],
    "asar": true,
    "directories": {
      "buildResources": "assets",
      "output": "dist"
    },
    "win": {
      "icon": "assets/icon.ico",
      "target": [
        "portable"
      ]
    },
    "portable": {
      "artifactName": "${productName}-${version}-Portable.exe"
    }
  }
}
